<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DataTables Example</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
</head>

</head>

<body>

    {{#if usernotfound}}
    <h1 style="text-align: center; color: rgb(135, 135, 247); margin-top: 60px;">NO USER FOUND</h1>
    {{/if}}
    <div style="margin-top: 80px;margin-left: 340px;" class="container">

        <table id="example1" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr style="text-align: center;">
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Block</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each totaluser }}

                <tr style="text-align: center;">
                    <td>{{this.Name}}</td>
                    <td>{{this.Phone}}</td>
                    <td>{{this.Email}}</td>
                    {{#if this.Status}}
                    <td><a href="/admin/blockuser/{{this._id}}" class="btn btn-danger">Unblock</a></td>
                   {{else}}
                       <td><a href="/admin/blockuser/{{this._id}}" class="btn btn-primary">block</a></td>
                   {{/if}}
                </tr>

                {{/each}}
        </table>
    </div>

</body>

<script>
    $(document).ready(function () {
        console.log('Document ready');
     new DataTable('#example1');
    });
</script>