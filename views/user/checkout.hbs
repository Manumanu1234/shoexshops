<script>
  function fun() {
    const radioButtons = document.getElementsByName("same");
    radioButtons.forEach(radio => {
      radio.checked = false;
    });
    var element = document.getElementById("collapseExample");
    element.style.display = "block";

  }
  function toggleAddressDetails(radio, addressId, fname, lname, address, phone, email) {
    // Toggle the address form display based on radio button selection
    console.log('Selected Address Details:');
    console.log('Name:', fname, lname);
    console.log('Address:', address);
    console.log('Number:', phone);
    console.log('Email:', email);
    var idsCommingElement = document.getElementById("idscomming");
    idsCommingElement.innerHTML = 'Name: ' + fname + ' ' + lname + '<br>' +
      'Address: ' + address + '<br>' +
      'Number: ' + phone + '<br>' +
      'Email: ' + email;

    const addressForm = document.getElementById("collapseExample");
    addressForm.style.display = event.target.checked ? "none" : "block";
  }

  function hoverarrowclicked(id) {
    let button = document.getElementById("adress-" + id).style.display
    if (button == "none") {
      document.getElementById("adress-" + id).style.display = "block"
    } else {
      document.getElementById("adress-" + id).style.display = "none"
    }


  }

  document.getElementById("istelem").checked = true;



</script>
