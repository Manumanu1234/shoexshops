              onclick="toggleAddressDetails(event,'{{this._id}}', '{{this.c_fname}}', '{{this.c_lname}}', '{{this.c_address}}', '{{this.c_phone}}', '{{this.c_email_address}}')">
             
            <label for="" class="text-dark ml-2">{{this.c_fname}} {{this.c_lname}},{{this.c_address}}</label>
            <span><i onclick="hoverarrowclicked('{{this._id}}')" style="float: right; cursor: pointer; font-size: 25px;"
                class="icon-angle-down"></i></span>
            <br>


            <div style="display: none; margin-top: 5pxpx; margin-bottom: 15px;" id="adress-{{this._id}}">
